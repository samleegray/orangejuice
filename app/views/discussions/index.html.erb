<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Discussions" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Discussions</h1>
    <%= link_to "New discussion", new_discussion_path, class: "good-button" %>
  </div>

  <div id="discussions" class="min-w-full">
<!--     Can be done one of two ways-->
      <%#= render partial: "discussion", collection: @discussions, spacer_template: 'shared/spacer' %>
<!--      or...(with each do X)-->

    <% @discussions.each do |discussion| %>
      <%= render discussion %>
      <br />
    <% end %>
  </div>
</div>
