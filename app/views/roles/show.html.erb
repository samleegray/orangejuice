<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @role %>

    <%= link_to "Edit this role", edit_role_path(@role), class: "good-button" %>
    <%= link_to "Back to roles", roles_path, class: "nav-button" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this role", @role, method: :delete, class: "bad-button" %>
    </div>
  </div>
</div>
